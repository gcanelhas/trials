<body>
    <div class="container">
        <h1>Currency Converter</h1>
        <h2 id="price">â‚¬100</h2>  <!-- Default price in Euro -->

        <select id="currency">
            <option value="USD">USD</option>
            <option value="GBP">GBP</option>
            <option value="JPY">JPY</option>
            <!-- Add other currencies as needed -->
        </select>

        <p class="result">Price in Selected Currency: <span id="converted-price"></span></p>
    </div>

    <script>
        let priceInEuro = parseFloat($('#price').text());

        $('#currency').change(function() {
            let selectedCurrency = this.value;
            
            $.getJSON(`https://v6.exchangerate-api.com/v6/YOUR-API-KEY/latest/EUR`, function(data) {
                let rateToSelected = data.conversion_rates[selectedCurrency];

                let priceInSelected = priceInEuro * rateToSelected;
                $('#converted-price').text(priceInSelected.toFixed(2) + ' ' + selectedCurrency);
            });
        });
    </script>
</body>
